@model HomeWorkApp.Models.RegisterUserModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>Регистрация</h2>

@using (Html.BeginForm())
{
    @*затища от CSRF-атак*@
    @Html.AntiForgeryToken()

    <div>
        <hr />
        @*для отображения сообщений об ошибках при валидации модели, false - отображаются все ошибки*@
        @Html.ValidationSummary(false)
        <div>
            Имя пользователя
            <div>
                @Html.EditorFor(model => model.UserName)
            </div>
        </div>

        <div>
            Пароль
            <div>
                @Html.EditorFor(model => model.Password)
            </div>
        </div>

        <div>
            Подтвердить пароль
            <div>
                @Html.EditorFor(model => model.PasswordConfrim)
            </div>
        </div>

        <div>
            <div>
                <input type="submit" value="Зарегистрировать" />
            </div>
        </div>
    </div>
}

